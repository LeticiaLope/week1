<%- include ../partials/header.ejs%>

<%- include ../partials/main_nav.ejs%>

<!--content for edit page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
        <h1><%= title %></h1>

        <form class="form" method="POST">
            <div class="form-group">
                <label for="name"> User Name </label>
                <input type="text" class="form-control"
                id="name"
                placeholder="Enter the user's name"
                name="name" 
                value="<%= user.name %>"
                required>
            </div>
            <div class="form-group">
                <label for="numberTextField"> Contact Number </label>
                <input type="text" class="form-control"
                id="numberTextField"
                placeholder="Enter the user's contact number"
                name="number"                 
                value="<%= user.contact %>"
                required>
            </div>
            <div class="form-group">
                <label for="emailTextField"> Email </label>
                <input type="text" class="form-control"
                id="emailTextField"
                placeholder="Enter the user's Email"
                name="email"                 
                value="<%= user.email %>"
                required>
            </div>
           

            <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i> Submit </button>
            
            <a href="/users" class="btn btn-warning">
                <i class="fas fa-undo"></i> Cancel </a>
        </form>
    </div>
    </div>
</div>



    <%- include ../partials/bottom_nav.ejs%>

  
